{
	"name": "Add to Are.na",
	"version": "0.1.6",
	"manifest_version" : 2,
	"description": "Are.na extension for Chrome. Assemble new ideas with text, links, articles, images and more.",
	"background" : {
		"page" : "background.html"
	},
	"browser_action": {
   "default_icon": "icons/icon-48.png"
  },
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["lib/jquery-2.1.1.min.js","scripts/main.js"],
		"run_at": "document_idle"
	}],
	"permissions": [ "tabs", "contextMenus", "webNavigation", "<all_urls>", "http://*/*", "https://*/*", "storage", "identity"],
	"icons": {
		"16": "icons/icon-16.png",
		"48": "icons/icon-48.png",
		"128": "icons/icon-120.png"
	}
}
